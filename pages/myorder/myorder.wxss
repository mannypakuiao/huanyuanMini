/* pages/myorder/myorder.wxss */
.col{
  color: orange;
  font-weight: 800;
}
.img image{
  width: 50rpx;
  height: 50rpx;
}
.order_li{
  padding: 40rpx 20rpx;
  border-bottom: 2rpx solid rgb(201, 201, 201);
  position: relative;
}
.order_state{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.menpiao{
  margin-left: 20rpx;
  font-size: 28rpx;
}
/* .order_desc{
  margin-top: 30rpx;
} */
.order_title{
  font-size: 40rpx;
  font-weight: 800;
}
.order_number{
  display: flex;
  justify-content: space-between;
}
.order_btn{
  display: flex;
  justify-content: flex-start;
  position: relative;
  height: 50rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.btn_cont{
  display: flex;
  position: absolute;
  right: 0;
}
.order_quxiao_btn{
  border: 2rpx solid rgb(182, 182, 182);
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
}
.order_zhifu_btn{
  border: 2rpx solid rgb(182, 182, 182);
  background: #c8a468;
  color: #fff;
  padding: 5rpx 10rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}
.order_date{
  margin-top: 20rpx;
}
.ziti{
  font-size: 30rpx;
  color: rgb(161, 161, 161);
}
.order_number_right{
  font-size: 35rpx;
}
.hui{
  color: rgb(158, 158, 158);
}
/* 出票状态 */
.chupiao_status{
  text-align: right;
  font-size: 22rpx;
}
.lvse{
  color: green;
}
.hongse{
  color: red;
}
.dianwo{
  font-size: 33rpx;
  padding: 10rpx 0;
  text-align: center;
  color: green;
  border-bottom: 2rpx solid rgb(201, 201, 201);
}