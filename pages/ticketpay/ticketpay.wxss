.page_content{
  width:100%;
  height: 100%;
  background: rgb(230, 230, 230);
}

/* top */
.top{
  position: relative;
  height: 200rpx;
  background: #cc9029;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.top_title{
  color: #fff;
}
.top_desc{
  font-size: 28rpx;
  color: red;
  text-align: center;
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  border-radius: 13rpx;
}

/* moddle */
.moddle{
  background: #fff;
  height: 200rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.moddle_cont{
  display: inline-block;
  line-height: 57rpx;
}
.bottom{
  border-radius: 13rpx;
  margin: 20rpx auto;
  width: 95%;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
}
.bottom_left_ul{
  width: 25%;
  font-size: 33rpx;
  color: rgb(161, 161, 161);
  line-height: 66rpx;
}
.bottom_right_ul{
  width: 73%;
  margin-left: 2%;
  line-height: 66rpx;
  font-size: 33rpx;
}


/* 支付按钮 */
button{
  margin-top: 100rpx;
  width: 90%;
  height: 100rpx;
  line-height: 95rpx;
  border-radius: 50rpx;
  background: #cc9029;
  color: #fff;
  box-sizing: border-box;
  padding: 5rpx 10rpx;
  font-size: 33rpx;
}

.bottom_right_li{
  font-size: 29rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}


