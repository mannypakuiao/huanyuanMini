/* 顶部投诉 */
.news_content{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid rgb(236, 236, 236);
  padding: 20rpx 40rpx ;
}
.left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 80%;
}
.tousu_banjie{
  font-size: 30rpx;
}
.tousu_paoma{
  display: flex;
  align-items: center;
}
.toushu_li{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cont{
  font-size: 26rpx;
  color: rgb(155, 155, 155);
  margin-left: 30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.left image{
  height: 40rpx;
  width: 40rpx;
}

.tousu_content{
  width: 100%;
  height: 50%;
  padding: 40rpx;
  box-sizing: border-box;
  position: absolute;
  top: 47%;
  left: 50%;
  transform: translate(-50%, -50%);  
}
.tousus{
  height: 40%;
  border: 2rpx solid rgb(230, 230, 230);
  box-shadow: 0 0 20rpx #fff;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
}
.img image{
  width: 100rpx;
  height: 100rpx;
}
.right{
  margin-left: 50rpx;
}
.title{
  font-weight: 800;
  font-size: 40rpx;
}
.tousu_desc{
  font-size: 28rpx;
  color: rgb(121, 121, 121);
  margin-top: 5rpx;
}
.dianhua_content{
  margin-top: 40rpx;
}
.cotent_desc{
  display: flex;
  margin-left: 100rpx;
}

.guanfang{
  color: rgb(155, 155, 155);
  font-size: 30rpx;
  text-align: center;
  margin-top: 136rpx;
}